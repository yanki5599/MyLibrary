@model IEnumerable<MyLibrary.Models.Shelf>

@{
    ViewData["Title"] = "Index";
}

<h1>רשימת מדפים</h1>

<p>
    <a asp-action="Create">צור מדף חדש</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Width)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AvailableSpace)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Width)cm
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Height)cm
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AvailableSpace)
                </td>
            <td>
                    <a asp-action="Create" asp-controller="Books" asp-route-id="@item.Id">Add a book</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
