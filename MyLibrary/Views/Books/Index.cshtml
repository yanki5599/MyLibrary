@model IEnumerable<MyLibrary.Models.Book>

@{
    ViewData["Title"] = "Index";
}

@{
    <style>
        tr th, tr td {
            text-align: center;
        }
    </style>
}

@if (ViewBag.messege != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.messege
        <a asp-action="Index" asp-controller="Shelves">go to shelves</a>
    </div>
}



<h1>רשימת ספרים</h1>

<p>
    <a asp-action="Create">צור ספר או סט חדש</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shelf.Category.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Width)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Height)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SetOfBooks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shelf)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Shelf.Category.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Width)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Height)
                </td>
                <td style="text-align:center">
                    @if (item.SetOfBooksId != null)
                    {

                        <i class="fa-solid fa-check" style="color:green"></i>
                    }
                    else
                    {
                        <i class="fa-solid fa-xmark" style="color:red"></i>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Shelf.Id)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

